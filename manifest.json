{
	"name": "Chroplus",
	"manifest_version": 2,
	"version": "1.0",
	"description": "plus and substract for more peace and quite",
	"browser_action": {
		"default_icon":"icon.png",
		"default_popup":"popup.html"
	},
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["http://acm.hdu.edu.cn/*"],
			"js":["chroplus.js"]
		},
		{
			"matches": ["https://www.baidu.com/*"],
			"js":["baidu.js"]
		},
		{
			"matches": ["https://www.jianshu.com/*"],
			"js":["jianshu.js"]
		},
		{
			"matches": ["http://blog.sina.com.cn/u/6274555375"],
			"js":["sinablog.js"]
		}
	]
}